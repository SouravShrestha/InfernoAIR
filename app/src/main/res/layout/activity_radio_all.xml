<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawLayout_radio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.souravshrestha.newsbullets.RadioAll"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backCard">
        <include layout="@layout/nav_action" android:layout_height="wrap_content" android:layout_width="match_parent"
            android:id="@+id/mNav" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardArchiveImage"
        android:layout_margin="5dp"
        android:layout_height="150dp"
        android:layout_below="@+id/mNav">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/news_back"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop" />

        <TextView
            android:text="Listen LIVE !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="bottom|center"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="7dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardArchiveImage"
        android:overScrollMode="never"
        android:id="@+id/radioAll_rec"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_above="@+id/layoutPlayer" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutPlayer"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:elevation="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp"
                android:id="@+id/imageNowPlaying1"
                android:layout_weight="3"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/seekBar1"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:text="No Track To Play"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/playTitle1"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

            <Button
                android:id="@+id/bPlayPause1"
                android:background="@drawable/play_button"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center" />

        </LinearLayout>
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navBar_radio"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="false"
        android:background="@color/backCard"
        android:contextClickable="false"
        app:headerLayout="@layout/nav_head"
        app:menu="@menu/nav_menu"
        tools:ignore="ExtraText" />
</android.support.v4.widget.DrawerLayout>
